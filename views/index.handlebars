<h1>BURGERS!!!</h1>

<h2>Burgers I want to DEVOUR!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>{{this.burger_name}}
                <button type="submit" data-id="{{burgers.id}}" data-newState="{{burgers.devoured}}" id="devour-btn">DEVOUR DA BURGER!!!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>{{this.burger_name}}</li>
        {{/if}}
    {{/each}}
</ul>

<form class="new-burger">
    <input type="text" id="newBurgerName" name="burger_name">
    <button type="submit" class="newBurgerSubmit">Add new BURGER</button>
</form>